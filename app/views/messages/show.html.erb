<%- model_class = Message -%>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Last Minute List - Main Dashboard</title>

</head>

<body>

    <div id="wrapper">
        <!-- Navigation - from Shared -->
        <%= render "shared/dashboard_navigation" %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <br>
                    <!-- Dashboard Panel - from Shared -->
                    <%= render "shared/dashboard_panel" %>

                    <!-- PAGE CONTENT HERE -->

                    <div class="page-header">
                      <h1>Your <%=t '.title', :default => model_class.model_name.human.titleize %></h1>
                    </div>

                    <dl class="dl-horizontal">
                      <dt><strong><%= model_class.human_attribute_name(:sms_message_body) %>:</strong></dt>
                      <dd><%= @message.sms_message_body %></dd>
                      <dt><strong><%= model_class.human_attribute_name(:appointment_time) %>:</strong></dt>
                      <dd><%= @message.appointment_time %></dd>
                      <dt><strong><%= model_class.human_attribute_name(:claim_appointment_url) %>:</strong></dt>
                      <dd><%= @message.claim_appointment_url %></dd>
                      <dt><strong><%= model_class.human_attribute_name(:appointment_discount) %>:</strong></dt>
                      <dd><%= @message.appointment_discount %></dd>
                    </dl>

                    <%= link_to t('.back', :default => t("helpers.links.back")),
                                  messages_path, :class => 'btn btn-default'  %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_message_path(@message), :class => 'btn btn-default' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  message_path(@message),
                                  :method => 'delete',
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-danger' %>

                <!-- /.col-lg-12 -->
            </div>
        </div>          
    </div>
    <!-- /#wrapper -->

    <!-- Metis Menu Plugin JavaScript -->
    <%= javascript_include_tag "metisMenu.min" %>

    <!-- Custom Theme JavaScript -->
    <%= javascript_include_tag "sb-admin-2" %>

</body>

</html>
