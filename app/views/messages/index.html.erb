<!doctype html>
<html class="no-js" lang="">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Messages</title>
  <meta name="description" content="...">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Shared Resoures for the Dashboard -->
  <%= render "shared/dashboard_css" %>
  <!-- styles are currently loading from application.css -->
  
</head>
<body>
  <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
  <![endif]-->

<%= render "shared/dashboard_header" %>

  <!-- Page Wrap -->
  <div class="pageWrap">

  <!-- Page content -->
    <div class="pageContent extended">
      <div class="container">
        <div class="boxHeader pageBoxHeader clearfix">
          <div class="pull-left">
            <h1 class="pageTitle">
              <a href="#" title="#">Dashboard</a>
            </h1>
            <ol class="breadcrumb">
              <li><a href="dashboard.html">Last Minute List</a></li>
              <li class="active">Past Alerts</li>
            </ol>
          </div>
        </div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <!-- PAGE CONTENT HERE -->
            <% @appointments.each do |appointment| %> 
              <%= human_boolean(appointment.filled) %>
            <% end %>

            <%- model_class = Message -%>
            
            <!-- Original Table -->
              <!-- Basic table -->
        <div class="box rte box-without-bottom-padding">
          <h2 class="boxHeadline">Past Alerts</h2>
          <h3 class="boxHeadlineSub">A list of past SMS messages sent</h3>
          
          <div class="tableWrap table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:id) %></th>
                  <th><%= model_class.human_attribute_name(:sms_message_body) %></th>
                  <th><%= model_class.human_attribute_name(:appointment_time) %></th>
                  <th><%= model_class.human_attribute_name(:claim_appointment_url) %></th>
                  <th><%= model_class.human_attribute_name(:appointment_discount) %></th>
                  <th><%= model_class.human_attribute_name(:created_at) %></th>
                  <th><%=t '.actions', :default => t("helpers.actions") %></th>
                </tr>
              </thead>
              <tbody>
                <% @messages.each_with_index do |message, i| %>
                  <tr>
                    <td><%= link_to message.id, message_path(message) %></td>
                    <td><%= message.sms_message_body %></td>
                    <td><%= message.appointment_time %></td>
                    <td><%= link_to message.claim_appointment_url %></td>
                    <td><%= message.appointment_discount %></td>
                    <td><%= message.created_at %></td>
                    <td>
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_message_path(message), :class => 'btn btn-default btn-xs' %>
                      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  message_path(message),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-xs btn-danger' %>
                    </td>
                  </tr>
                  <% break if i == 10; %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

            <%= link_to t('.new', :default => t("helpers.links.new")), new_message_path, :class => 'btn btn-primary' %>      
        </div>
        <!-- /.col-lg-12 -->
      </div>
    </div>          
  </div>
<!-- /#wrapper -->



  <div class="visible-xs visible-sm extendedChecker"></div>
  
</body>





