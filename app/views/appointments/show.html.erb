<div id="container">
    <div class="row">
        <div class="col-xs-3 .col-md-3">    
        </div>

        <div class="col-xs-6 .col-md-6">
        <h1>Book this appointment</h1>
        <h3>Filled: <%= @appointment.filled? %></h3>
        <%= booked_or_not(@appointment.filled) %>

        
        <h3>Message id: <%= @message.id %></h3>
        <h3>Appointment id: <%= @appointment.id %></h3>
        
        <h2>Message Body: <%= @message.sms_message_body %></h2>
        
        <h3>At the following time: <%= @message.appointment_time %></h3>
        



        <% comment do %>
        <h3>At the following time: <%= @message.appointment_time %>  </h3>
        <h3>For the following service: <%= @appointment.message.sms_message_body %></h3>
        <% end %>

        <%= form_tag("/appointments/#{@appointment.id}/book", method: 'post') do %>
        <%= label_tag :customer_name %>
        <%= text_field_tag :customer_name %>
        <%= submit_tag('Book')%>
      <% end %>
</div>




