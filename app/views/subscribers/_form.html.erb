<%= form_for @subscriber, :html => { :class => "form-horizontal message" } do |f| %>

  <% if @subscriber.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subscriber.errors.full_subscribers.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subscriber_phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subscriber_phone_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subscriber_phone_number) %>
  </div>
  <div class="form-group">
    <%= f.label :subscriber_email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subscriber_email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subscriber_email) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subscribers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>